    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    .left {
        float: left;
        width: 30%;
    }

    .right {
        float: right;
        width: 30%;
    }

    .center {
        margin: 0 auto;
        width: 30%;
    }

</style>
