<body>
    <div class="container">
        <div class="header">
            <h1>Professional Page</h1>
            <div class="button-container">
                <button onclick="moveParagraph()">Move Paragraph</button>
            </div>
        </div>
        <p id="myParagraph">Hello, world!</p>
        <form id="orderForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address">
            <label for="city">City:</label>
            <input type="text" id="city" name="city">
            <input type="submit" value="Submit Order">
        </form>
    </div>
    <script>
        const form = document.getElementById("orderForm");
        form.addEventListener("submit", function(event) {
            event.preventDefault();
            const name = document.getElementById("name").value;
            const address = document.getElementById("address").value;
            const city = document.getElementById("city").value;
            alert("Order received: " + name + ", " + address + ", " + city);
        });
        function moveParagraph() {
            const paragraph = document.getElementById("myParagraph");
            if (paragraph.style.left === "50px") {
                paragraph.style.left = "200px";
            } else {
                paragraph.style.left = "50px";
            }
        }
    </script>
</body>
